@using HamburgerAppV1.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Home Page";
}

@model List<Menu>

<style>
    .carousel-item img {
        object-fit: cover;
        height: 800px;
    }
</style>

<div class="container-fluid">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/menu1.jpg" height="auto" class="d-block w-100" />
                <div class="carousel-caption d-none d-md-block">
                    <h4>Lezzetli Hamburger</h4>
                    <p class="fw-bold">Enfes lezzetlerimizle açlığınızı dindirelim.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/menu2.jpg" height="auto" class="d-block w-100" />
                <div class="carousel-caption d-none d-md-block">
                    <h4>Taze Malzemeler</h4>
                    <p class="fw-bold">Sadece en taze ve kaliteli malzemeleri kullanıyoruz.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/menu3.jpg" height="auto" class="d-block w-100" />
                <div class="carousel-caption d-none d-md-block">
                    <h4>Özel Soslar</h4>
                    <p class="fw-bold">Özel soslarımızla hamburgerinizi eşsiz kılın.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/menu4.jpg" height="auto" class="d-block w-100" />
                <div class="carousel-caption d-none d-md-block">
                    <h4>Çeşitli Seçenekler</h4>
                    <p class="fw-bold">Hamburgerimiz farklı lezzetler ve boyutlarla sizleri bekliyor.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <h1 class="mt-3 mb-4 text-center" style="color:firebrick">Menülerimiz</h1>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-2">
                <div class="card text-center d-flex align-items-center" style="color:firebrick; background-color: rgb(179, 163, 152); border: 2px solid">
                    <h4 class="mt-2">@item.MenuAd</h4>
                    <img src="~/img/@item.ResimYolu" class="img-fluid" width="250" height="350" alt="" />
                </div>
            </div>
        }
    </div>


    @if (SignInManager.IsSignedIn(User))
    {
        if (User.IsInRole("Musteri"))
        {
            <a asp-area="Musteri" asp-action="MenuleriIncele" asp-controller="Siparis" class="btn btn-warning d-block mt-4 fw-bold rounded-3" style="color:firebrick">Sipariş Verin</a>
        }
    }

</div>