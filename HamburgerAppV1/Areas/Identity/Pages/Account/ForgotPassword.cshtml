@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}


<div class="row">
    <div class="col-md-4"></div>

    <div class="col-md-4">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="isim@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Şifreyi Sıfırla</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
